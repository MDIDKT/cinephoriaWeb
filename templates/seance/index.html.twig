{% extends 'base.html.twig' %}

{% block title %}Séance Index{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen">
        <div class="max-w-4xl bg-gray-200 p-6 rounded-lg">
            <h1 class="text-2xl font-bold mb-4 text-center">Liste des séances</h1>
            <table class="min-w-full bg-white shadow-md rounded-lg">
                <thead class="border-b">
                <tr>
                    <th class="py-2 px-4 text-left">Id</th>
                    <th class="py-2 px-4 text-left">Heure Début</th>
                    <th class="py-2 px-4 text-left">Films</th>
                    <th class="py-2 px-4 text-left">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for seance in seances %}
                    <tr class="border-b border-gray-300">
                        <td class="py-2 px-4">{{ seance.id }}</td>
                        <td class="py-2 px-4">{{ seance.HeureDebut ? seance.HeureDebut|date('Y-m-d H:i:s') : '' }}</td>
                        <td class="py-2 px-4">{{ seance.films.titre }}</td>
                        <td class="py-2 px-4 flex space-x-4">
                            <a href="{{ path('app_seance_show', {'id': seance.id}) }}"
                               class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600">Voir</a>
                            {#                            <a href="{{ path('app_seance_edit', {'id': seance.id}) }}"
                               class="bg-gray-500 text-white py-2 px-4 rounded-lg hover:bg-gray-600">Modifier</a>
                            {{ include('seance/_delete_form.html.twig', { 'btn_classes': 'bg-red-500 text-white py-2 px-4 rounded-lg hover:bg-red-600' }) }} #}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="py-2 px-4 text-center">Aucune séance trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="flex justify-end mt-4">
                <a href="{{ path('app_seance_new') }}" class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600">Créer Nouvelle Séance</a>
            </div>
        </div>
    </div>
{% endblock %}