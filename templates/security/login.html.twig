{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="bg-gray-200 p-6 rounded-lg mx-auto mb-5 mt-8" style="max-width: 600px;">
        <h1 class="text-2xl font-bold mb-4 flex justify-center text-blue-50">Connexion</h1>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3 mt-2">
                    <div class="text-red-800 mb-3">
                        Vous êtes déja connecter en tant que : {{ app.user.userIdentifier }}
                    </div>
                    <a href="{{ path('app_logout') }}" class="btn btn-dark uppercase">Déconnexion</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            {{ form_start(form) }}
                {{ form_row(form.email) }}
                {{ form_row(form.password) }}
                {{ form_widget(form.csrf_token) }}
                {{ form_row(form.submit) }}
            {{ form_end(form) }}
        </form>
    </div>
{% endblock %}
